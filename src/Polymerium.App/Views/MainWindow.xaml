<ex:WindowEx
    x:Class="Polymerium.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Polymerium.App.Models"
    xmlns:ex="using:WinUIEx"
    Title="Polymerium" MinHeight="400" MinWidth="600" Height="600" Width="960"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
        <Rectangle x:Name="FakeBackground" Grid.ColumnSpan="9" Grid.RowSpan="9"
                   Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Visibility="Collapsed" />
        <Grid x:Name="AppTitleBar" Grid.ColumnSpan="9" Height="46" ColumnDefinitions="Auto,*">
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="25,5,25,5">
                    <TextBlock Text="Polymer" FontSize="14" VerticalAlignment="Center" FontWeight="Bold" />
                    <TextBlock Text="ium" FontSize="14" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="ColumnLeft" Width="Auto" />
                    <ColumnDefinition x:Name="ColumnRight" Width="*" />
                </Grid.ColumnDefinitions>
                <AutoSuggestBox Height="32" Width="200" HorizontalAlignment="Right" Margin="0,0,10,0"
                                PlaceholderText="Search" QueryIcon="Find" AutoMaximizeSuggestionArea="True" />
                <Grid x:Name="TitleBarDragArea" Grid.Column="1">
                    <!-- 这里能放些指示性的控件 -->
                </Grid>
            </Grid>
        </Grid>
        <NavigationView
            x:Name="MainNavigationBar"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="5,-5,0,5"
            Width="78"
            MenuItemsSource="{x:Bind ViewModel.NavigationPages}"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            IsTitleBarAutoPaddingEnabled="False"
            PaneDisplayMode="Left"
            Transitions="{x:Null}"
            FooterMenuItemsSource="{x:Bind ViewModel.NavigationPinnedPages}"
            SelectedItem="{x:Bind ViewModel.SelectedItem}"
            SelectionChanged="OnSelectionChanged">
            <NavigationView.PaneCustomContent>
                <ImageIcon Source="ms-appx:///Assets/Placeholder/skinmc-avatar.png" Margin="20" />
            </NavigationView.PaneCustomContent>
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="models:NavigationItemModel">
                    <NavigationViewItem IsSelected="{x:Bind IsSelected, Mode=TwoWay}"
                                        ToolTipService.ToolTip="{x:Bind Caption}">
                        <Grid Height="64" Margin="0,0,-10,0">
                            <StackPanel VerticalAlignment="Center" Margin="0">
                                <FontIcon Glyph="{x:Bind Glyph}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </NavigationViewItem>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
        </NavigationView>
        <Frame x:Name="RootFrame" Grid.Row="1" Grid.Column="1" />
        <!-- WinUI 的对话框没有自定义选项，这里引入 WPF 的 in-app 对话框风格 -->
        <ContentPresenter x:Name="TopOverlay" Grid.RowSpan="9" Grid.ColumnSpan="9"
                          Content="{x:Bind ViewModel.Overlay, Mode=OneWay}" />
    </Grid>
</ex:WindowEx>
