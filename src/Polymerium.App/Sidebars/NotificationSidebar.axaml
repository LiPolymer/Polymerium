<husk:Sidebar xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Polymerium.App.Drawers.NotificationSidebar">
    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
            <Button Grid.Column="0">
                <fi:SymbolIcon Symbol="ArrowRight" FontSize="{StaticResource MediumFontSize}" />
            </Button>
            <TextBlock Grid.Column="1" Text="Notifications" />
            <Button Grid.Column="2">
                <husk:IconLabel Icon="Checkmark" Text="Mark all as read" />
            </Button>
        </Grid>
    </Grid>
</husk:Sidebar>
